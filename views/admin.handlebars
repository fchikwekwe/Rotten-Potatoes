
<h2>Reviews</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Review Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each reviews}}
        <tr id="deleteReview-{{@index}}" data-review-id="{{this._id}}">
            <th scope="row">{{this._id}}</th>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>
                <form class="" action="" method="post" onsubmit="event.preventDefault();deleteReview('{{@index}}');">
                    <button type="submit"  class="btn btn-link m-0">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
